	ПеременныеОкружения = КонструкторПараметров.НовыеПараметры();
	ПеременныеОкружения.ПроизвольныеПоля();

	СкриптОбработчик = КонструкторПараметров.НовыеПараметры()
					  .ПолеМассив("Скрипт script", Тип("Строка"))
					  .ПолеОбъект("ПеременныеОкружения env", ПеременныеОкружения)
					  ;
	КонструкторПараметров.ПолеОбъект("Перед pre", СкриптОбработчик)
				.ПолеОбъект("После post", СкриптОбработчик);
	
